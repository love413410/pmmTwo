page {
  background-color: #efefef;
}

.item {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #efefef;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #4d4d4d;
  position: relative;
}

.top_ {
  width: 100%;
  height: 65rpx;
  line-height: 95rpx;
  font-size: 30rpx;
  overflow: hidden;
}

.top_ .lt {
  font-weight: 600;
}

.time {
  font-size: 22rpx;
  color: #b3b3b3;
}

.desbox {
  height: 75rpx;
  line-height: 75rpx;
  font-size: 22rpx;
  color: #b3b3b3;
}

.btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.btn1 {
  color: #fc612a;
  border: 1px solid #fc612a;
}
.btn2 {
  color: #5c5c5c;
  border: 1px solid #bfbfbf;
}
.img{
  position: absolute;
  top: 0;
  right: 0;
  width: 73rpx;
  height: 73rpx;
}
.masks{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  overflow: hidden;
  box-sizing: border-box;
}


.not_maskBox {
  width: 600rpx;
  height: 800rpx;
  background-color: #fff;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  position: relative;
  box-sizing: border-box;
  border-radius: 10rpx;
  z-index: 99999;
}

.qxa {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  left: 50%;
  margin-left: -32rpx;
  bottom: -105rpx;
}

.info {
  width: 100%;
  height: 700rpx;
  overflow-y: auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.send {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #fb7313;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.sends {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #fb7313;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.info-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 24rpx;
}

.idx {
  width: 40rpx;
}

.text {
  margin-left: 50rpx;
}
