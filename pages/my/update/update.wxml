<view class="item" wx:for="{{list}}" wx:key="{{index}}">
  <view class="item-box">
    <view class="item-top">
      <view class="top_l">
        {{item.name}}
      </view>
      <view class="top_r">
        <text class="gengxin" bindtap="lookFn" data-url="{{item.linkdes}}">更新说明</text>
        <text class="mar">|</text>
        <text class="xiazai" bindtap="ctrlFn" data-url="{{item.content}}">下载地址</text>
      </view>
    </view>
    <view class="item-btm">
      {{item.ctime}}
    </view>
  </view>
</view>