page{
  background-color: #efefef;
  padding-bottom: 90rpx;
  box-sizing: border-box;
}
.item{
  width: 100%;
  height: 100%;
  padding: 40rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 1px;
  overflow: hidden;
}
.item .lt_text{
  float: left;
  width: 500rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 100rpx;
}

._top{
  height: 32rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  margin-bottom: 10rpx;
}
.phone{
  color: #bfbfbf;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 15rpx;
}
._btm{
  width: 100%;
  font-size: 24rpx;
  line-height: 32rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.rt_edit{
  float: right;
  width: 110rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #bfbfbf;
  box-sizing: border-box;
}
.rt_edits{
  float: right;
  width: 110rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #F00;
  border-left: 1px solid #bfbfbf;
  box-sizing: border-box;
}
.addNew{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: auto;
  background-color: #ef7e20;
  color: #fff;
}