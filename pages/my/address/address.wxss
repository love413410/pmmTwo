page{
  background-color: #efefef;
}
.item {
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  border-bottom: 1px solid #efefef;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #8d8d8d;
  background-color: #fff;
}
.lt image {
  width: 26rpx;
  height: 26rpx;
  margin: 0 10rpx;
}
.ipt {
  padding-right: 45rpx;
  box-sizing: border-box;
}

.ipt input {
  width: 100%;
  height: 95rpx;
  text-align: right;
}


.ipts {
  margin-left: 36rpx;
  width: 70%;
}

.ipts input {
  width: 100%;
  height: 95rpx;
}

.send{
  position: fixed;
  bottom: 90rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ef7e20;
  color: #fff;
  border-radius: 10rpx;
}