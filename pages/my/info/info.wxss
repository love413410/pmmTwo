page {
  overflow: hidden;
  background-color: #efefef;
}

.exp-fm {
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  background-color: #fff;
  overflow: hidden;
}

.exp-top {
  height: 176rpx;
  border-bottom: 1px solid #efefef;
  position: relative;
  padding-right: 30rpx;
}

.exp-top .tit {
  float: left;
  line-height: 176rpx;
  font-weight: 600;
}

.exp-top .face {
  float: right;
  width: 112rpx;
  height: 112rpx;
  border: 1px solid #f29f4a;
  border-radius: 100%;
  position: relative;
  overflow: hidden;
  margin: 32rpx 30rpx 0 0;
  box-sizing: border-box;
}

.exp-top .ico {
  display: block;
  width: 14rpx;
  height: 22rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -11rpx;
}

.exp-in {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #efefef;
  padding-right: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.exp-in .tit {
  width: 150rpx;
  color: #333;
  font-weight: 600;
}

.exp-in .text {
  width: 300rpx;
  height: 88rpx;
  text-align: right;
}

.picker {
  color: #999;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.exp-in .ico {
  display: block;
  width: 14rpx;
