.macks {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
}

.foot_btn {
  width: 100%;
  height: 470rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

.head {
  width: 100%;
  height: 90rpx;
  /* padding: 0 40rpx;
  box-sizing: border-box; */
  border-bottom: 1px solid #efefef;
}

.head .lt {
  float: left;
  line-height: 90rpx;
  color: #333;
  width: 50%;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.head .rt {
  float: right;
  line-height: 90rpx;
  color: #ef7e20;
  width: 50%;
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.box {
  width: 100%;
  height: 360rpx;
  background-color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  height: 180rpx;
  padding: 65rpx 0;
  box-sizing: border-box;
  font-weight: 600;
  font-size: 30rpx;
}

.list .lt {
  float: left;
  line-height: 50rpx;
  margin-right: 20rpx;
}

.list .rt {
  float: right;
}

cover-image {
  width: 50rpx;
  height: 50rpx;
}
